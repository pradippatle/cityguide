<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"

    >
    <RelativeLayout
        android:orientation="vertical" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFF"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Login"
                android:typeface="serif"
                android:textSize="25sp"
                android:id="@+id/title_dialog_id"
                android:padding="15dp"
                android:background="@drawable/layout_bg_upper"
                android:gravity="center_horizontal"
                 />


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/layout_bg_below"
                android:gravity="center">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/password_edt"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:layout_weight="1"
                    android:typeface="serif"
                    android:textSize="15sp"
                    android:hint="Please provide the password for accessing app."
                    android:layout_margin="20dp"
                    android:textColor="#000000"
                    />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:text="SUBMIT"
                    android:typeface="serif"
                    android:id="@+id/alert_ok_button"
                    android:gravity="center"
                    android:background="@drawable/stl_btn_blue"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    />


            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>