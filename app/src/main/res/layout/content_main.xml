<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include layout="@layout/actionbar" />
    <!-- Include Action Bar -->

    <include layout="@layout/fragment_layout" />

    <!-- Include Fragmented dashboard -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:weightSum="4"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/id_bus_menu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:background="@null"
                    android:src="@drawable/ic_bus" />

                <TextView
                    android:id="@+id/id_txt_bus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ST Bus Timings"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/three_dp"
                    android:layout_marginBottom="@dimen/five_dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/eleven_sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_gov_scheme"
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:src="@drawable/ic_govt_news" />

                <TextView
                    android:id="@+id/id_txt_govschemes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Govt Schemes"
                    android:gravity="center"
                    android:singleLine="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/one_dp"
                    android:layout_marginBottom="@dimen/five_dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/eleven_sp"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ic_farmershelp"
                android:layout_width="0dp"
                android:layout_weight="0.9"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:src="@drawable/ic_farmers_help" />

                <TextView
                    android:id="@+id/id_txt_farmershelp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Farmers Help"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/five_dp"
                    android:layout_marginBottom="@dimen/five_dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/eleven_sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_chat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:background="@null"
                    android:src="@drawable/ic_chat" />

                <TextView
                    android:id="@+id/id_txt_news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tumsari Katta"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/three_dp"
                    android:layout_marginBottom="@dimen/five_dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/eleven_sp"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>